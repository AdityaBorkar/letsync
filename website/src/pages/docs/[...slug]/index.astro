---
import { getCollection, render } from "astro:content";
import DocsLayout from "@/layouts/documentation/DocsLayout.astro";

export async function getStaticPaths() {
	const pages = await getCollection("docs"); // TODO - TYPE DEFINATION
	return pages.map((page) => ({
		params: { slug: page.id },
		props: { page },
	}));
}

const { page } = Astro.props;
const { Content } = await render(page);
---

<DocsLayout title={page.data.title} description={page.data.description}>
	<h1>Copy from pulumi but in a aesthetic way</h1>

	<Content />
</DocsLayout>
