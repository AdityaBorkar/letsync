{
	"license": "MIT",
	"workspaces": ["www/", "packages/*", "examples/*"],
	"scripts": {
		"dev": "nx run dev",
		"commit": "git add . && cz",
		"branch": "git checkout -b",
		"format": "bun biome format",
		"lint:code": "bun biome lint",
		"lint:knip": "knip",
		"lint:cspell": "cspell lint . --no-progress",
		"lint:md": "markdownlint \"**/*.md\" --disable MD010 MD013 --ignore \"**/node_modules/**\"",
		"typecheck": "nx run-many --target=typecheck --projects=packages/*,www",
		"build:packages": "nx run-many --target=build --projects=packages/*",
		"build:www": "nx run-many --target=build --projects=www"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@swc/core",
		"esbuild",
		"nx",
		"sharp"
	],
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"@nx/js": "20.0.12",
		"@swc-node/register": "^1.10.9",
		"@swc/core": "^1.7.42",
		"@types/node": "^22.8.6",
		"commitizen": "^4.3.1",
		"cspell": "^8.15.5",
		"cz-conventional-changelog": "^3.3.0",
		"knip": "^5.36.0",
		"markdownlint-cli": "^0.42.0",
		"nx": "20.0.12",
		"typescript": "^5.6.3"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog",
			"gpg_sign": true
		}
	}
}
