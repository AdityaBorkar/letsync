{
  "name": "letsync",
  "license": "MIT",
  "workspaces": [
    "website/",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "commit": "git add . && cz",
    "dev": "nx run dev",
    "check-for-upgrades": "bun outdated",
    "format": "bun biome ci --formatter-enabled=true --linter-enabled=true --organize-imports-enabled=true",
    "build": "nx run-many --target=build",
    "release": "nx release --dry-run"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "nx",
    "sharp"
  ],
  "dependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nx/js": "20.0.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "nx": "20.0.3",
    "oxlint": "^0.10.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}